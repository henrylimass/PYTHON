
class IMC:
    def __init__(self,nome,peso,altura):
        self.nome=nome
        self.peso=peso
        self.altura=altura
        
    def calcularIMC(self):
        return self.peso/(self.altura**2)
       
       
    
    
i1=IMC("silva",56.8,1.70)
print(i1.nome)
print(f'{i1.calcularIMC(): .2f}')

i2=IMC("henry",80.8,1.72)
print(i2.nome)
print(f'{i2.calcularIMC(): .2f}')
    
